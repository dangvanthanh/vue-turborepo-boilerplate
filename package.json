{
	"name": "vue-turborepo-boilerplate",
	"private": true,
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev",
		"check": "turbo check",
		"lint": "turbo lint",
		"format": "turbo format",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@repo/biome-config": "workspace:*",
		"@repo/typescript-config": "workspace:*",
		"@types/node": "^22.4.1",
		"autoprefixer": "^10.4.20",
		"husky": "^9.1.4",
		"lint-staged": "^15.2.9",
		"tailwindcss": "^3.4.10",
		"turbo": "^2.1.0"
	},
	"engines": {
		"node": ">=18"
	},
	"packageManager": "bun@1.1.25",
	"workspaces": ["apps/*", "packages/*"],
	"lint-staged": {
		"*.{js,ts,vue}": ["bun run lint", "bun run format"]
	},
	"msw": {
		"workerDirectory": ["public"]
	}
}
