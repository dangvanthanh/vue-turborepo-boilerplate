{
	"name": "vue-turborepo-boilerplate",
	"private": true,
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev",
		"check": "turbo check",
		"lint": "turbo lint",
		"format": "turbo format",
		"prepare": "husky"
	},
	"devDependencies": {
		"@repo/biome-config": "workspace:*",
		"@repo/typescript-config": "workspace:*",
		"@types/node": "^22.13.14",
		"husky": "^9.1.7",
		"lint-staged": "^15.5.0",
		"turbo": "^2.4.4"
	},
	"engines": {
		"node": ">=18"
	},
	"packageManager": "bun@1.2.6",
	"workspaces": ["apps/*", "packages/*"],
	"lint-staged": {
		"*.{js,ts,vue}": ["bun run lint", "bun run format"]
	},
	"msw": {
		"workerDirectory": ["public"]
	}
}
