{
	"name": "vue-turborepo-boilerplate",
	"private": true,
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev",
		"check": "turbo check",
		"lint": "turbo lint",
		"format": "turbo format",
		"prepare": "husky"
	},
	"devDependencies": {
		"@repo/biome-config": "workspace:*",
		"@repo/typescript-config": "workspace:*",
		"@types/node": "^24.7.1",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.3",
		"turbo": "^2.5.8"
	},
	"engines": {
		"node": ">=18"
	},
	"packageManager": "bun@1.3.0",
	"workspaces": ["apps/*", "packages/*"],
	"lint-staged": {
		"*.{js,ts,vue}": ["bun run lint", "bun run format"]
	},
	"msw": {
		"workerDirectory": ["public"]
	}
}
